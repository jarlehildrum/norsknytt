<BaseLayout title="Arkiv" description="Arkiv over alle Norsknytt-utgaver">
  <article class="page">
    <header class="entry-header">
      <h1 class="entry-title">Arkiv</h1>
    </header>
    
    <div class="entry-content">
      <div class="arkiv-kolonner">
        <div class="arkiv-kolonne">
          <ul>
            {kolonne1.map((item) => (
              <li>
                {item.url ? (
                  <a href={item.url}>{item.nummer}</a>
                ) : (
                  <span>{item.nummer}<br />{item.note}</span>
                )}
              </li>
            ))}
          </ul>
        </div>

