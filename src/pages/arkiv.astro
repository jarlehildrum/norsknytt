    flex-wrap: nowrap;
    gap: 2em;
  }

  .arkiv-kolonne {
    flex: 1;
    min-width: 0;
  }

  .arkiv-kolonne ul {
    list-style: disc;
    padding-left: 1.5em;
    margin: 0;
  }

  .arkiv-kolonne li {
    padding: 0.25rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .arkiv-kolonne li:last-child {
    border-bottom: none;
  }

  .arkiv-kolonne a {
    color: var(--color-link);
  }

  .arkiv-kolonne a:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .arkiv-kolonner {
      flex-wrap: wrap;
    }

    .arkiv-kolonne {
      flex: 1 1 100%;
    }
  }
</style>
