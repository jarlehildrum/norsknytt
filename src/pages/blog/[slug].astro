---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="blog-post">
    <header class="entry-header">
      <h1 class="entry-title">{post.data.title}</h1>
      <div class="entry-meta">
        Publisert den <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('nb-NO', {
            day: 'numeric',
            month: 'long',
            year: 'numeric'
          })}
        </time> av {post.data.author}
      </div>
    </header>
    
    <div class="entry-content prose">
      <Content />
    </div>
    
    <nav class="post-navigation">
      <a href="/">&larr; Tilbake til forsiden</a>
    </nav>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
  }

  .entry-title {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .entry-meta {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    font-size: 0.9rem;
  }

  .entry-content {
    line-height: 1.8;
  }

  .entry-content :global(p) {
    margin-bottom: 1.5em;
  }

  .entry-content :global(h2) {
    margin-top: 2em;
    margin-bottom: 1em;
  }

  .entry-content :global(ul),
  .entry-content :global(ol) {
    margin-bottom: 1.5em;
    padding-left: 2em;
  }

  .entry-content :global(blockquote) {
    border-left: 4px solid var(--color-border);
    padding-left: 1.5em;
    margin: 1.5em 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .post-navigation {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .post-navigation a {
    color: var(--color-link);
  }
</style>
